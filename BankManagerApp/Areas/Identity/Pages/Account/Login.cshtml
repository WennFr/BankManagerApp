@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    ViewBag.BodyClass = "home";

}


<section class="user-login section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="block">
                    <div class="image align-self-center img-login">
                        <img class="img-fluid " src="~/images/office-corridor.jpg"
                             alt="desk-image">
                    </div>
                    <div class="content text-center bg-white">
                        <div class="logo">
                            <a asp-page="/Index"><img src="~/images/BrB-logo2-alt.png" alt=""></a>
                        </div>
                        <div class="title-text">
                            <h3>Employee Portal</h3>
                        </div>
                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <!-- Username -->
                            <input asp-for="Input.Email" class="form-control main" autocomplete="username" type="text" placeholder="E-mail" aria-required="true">
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                            <!-- Password -->
                            <input asp-for="Input.Password" class="form-control main" type="password" placeholder="Password" autocomplete="current-password" aria-required="true">
                            <span asp-validation-for="Input.Password" class="text-danger"></span>

                            <!-- Submit Button -->
                            <div>
                                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                            </div>
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>

                        </form>
                        <div class="new-account">
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                            </p>

                            <p>
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                            </p>

                        </div>
                    </div>
