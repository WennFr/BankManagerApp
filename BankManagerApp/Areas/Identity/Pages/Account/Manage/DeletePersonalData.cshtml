@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Confirm Password";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
    ViewBag.BodyClass = "home";
}

<section class="job-list section pt-4 position-relative pull-top ">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-10 m-auto">
                <div class="block">
                    <div class="job">
                        <div class="content justify-content-center align-items-center edit-user-box">

                            <partial name="_ManageNav" model="@Model.UserId" />

                            <div class="justify-content-center mt-3">
                                <div>
                                    <h3>@ViewData["Title"]</h3>
                                </div>

                                <div class="alert alert-warning mt-3" role="alert">
                                    <p>
                                        <strong>Deleting this data will permanently remove the user account, and this cannot be recovered.</strong>
                                    </p>
                                </div>

                                <div class="mt-3">

                                    <form id="delete-user" method="post">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        @if (Model.RequirePassword)
                                        {
                                            <div class="form-floating">
                                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                                                <label asp-for="Input.Password" class="form-label"></label>
                                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                                            </div>
                                        }
                                        <button class="w-100 btn btn-lg btn-danger" type="submit">Delete</button>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
