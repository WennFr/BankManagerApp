@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
    ViewBag.BodyClass = "home";
}

<section class="job-list section pt-4 position-relative pull-top">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-10 m-auto">
                <div class="block">
                    <div class="job">
                        <div class="content justify-content-center align-items-center edit-user-box">

                            <partial name="_ManageNav" model="@Model.UserId" />

                            <div class="justify-content-center mt-3">
                                <div>
                                    <h3>@ViewData["Title"]</h3>
                                </div>

                                <partial name="_StatusMessage" for="StatusMessage" />

                                <div class="mt-3">
                                    <form id="change-password-form" method="post">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-floating">
                                            <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" />
                                            <label asp-for="Input.OldPassword" class="form-label"></label>
                                            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                                        </div>
                                        <div class="form-floating">
                                            <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                                            <label asp-for="Input.NewPassword" class="form-label"></label>
                                            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                                        </div>
                                        <div class="form-floating">
                                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                                            <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                        </div>
                                        <button type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>








@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
