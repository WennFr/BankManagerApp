@page
@model BankManagerApp.Pages.Customers.TopCustomersByCountryModel
@{
    ViewBag.BodyClass = "homelong";

}
@{
    var counter = 1;
}

<h1 class="text-center">Top Customers</h1>

<section class="job-list section pt-0">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-lg-12 m-auto">
                        <div class="block">
                            <table class="title table table-striped">
                                <thead>
                                    <tr>
                                        <th>Rank</th>
                                        <th scope="col">Id</th>
                                        <th scope="col">First Name</th>
                                        <th scope="col">Last Name</th>
                                        <th scope="col">City</th>
                                        <th scope="col">Country</th>
                                        <th scope="col">Total Balance</th>
                                        <th></th>

                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var cust in Model.TopCustomers)
                                    {

                                        <tr class="job">
                                            <tr class="container">
                                                <td>@(counter++).</td>
                                                <td>@cust.Id</td>
                                                <td>@cust.GivenName</td>
                                                <td>@cust.Surname</td>
                                                <td>@cust.City</td>
                                                <td>@cust.Country</td>
                                                <td>@cust.TotalBalanceOfAllAccounts</td>
                                                <td><a asp-page="/Customers/Customer" asp-route-customerId="@cust.Id" class="btn btn-primary">View</a></td>
                                            </tr>
                                        </tr>
                                    }
                                    
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </section>







