@page
@model BankManagerApp.Pages.Customers.TopCustomersByCountryModel
@{
}


<h1>All Customers</h1>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Ranking</th>
        <th scope="col">Id</th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">City</th>
        <th scope="col">Country</th>
        <th scope="col">Total Balance</th>
        <th></th>

    </tr>
    </thead>
    <tbody>

    @{var counter = 1;}
    @foreach (var cust in Model.TopCustomers)
    {

        <tr>
            <td>@(counter++).</td>
            <td>@cust.Id</td>
            <td>@cust.GivenName</td>
            <td>@cust.Surname</td>
            <td>@cust.City</td>
            <td>@cust.Country</td>
            <td>@cust.TotalBalanceOfAllAccounts</td>
            <td><a asp-page="/Customer" asp-route-id="@cust.Id" class="btn btn-primary">View</a></td>

        </tr>
    }



    </tbody>
</table>