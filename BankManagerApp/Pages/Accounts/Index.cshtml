@page
@model BankManagerApp.Pages.Accounts.IndexModel
@{
    ViewBag.BodyClass = "homelong";
}

<partial name="_Showcase" model='new { HeaderText = "All Accounts", ParagraphText = "" }' />



<section class="job-list section pt-0 position-relative pull-top">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-12 m-auto">
                <div class="block">
                    <table class="title table table-hover table-sm">
                        <thead >
                            <tr>
                                <h3>Page @Model.CurrentPage of @Model.PageCount</h3>
                                <th scope="col">AccountId</th>
                                <th scope="col">
                                    Frequency
                                    <a asp-page="/Accounts/Index"
                                       asp-route-sortColumn="Frequency"
                                       asp-route-sortOrder="asc"
                                       style="text-decoration: none">
                                        <i class="fa-solid fa-angle-up"></i>

                                    </a>
                                    <a asp-page="/Accounts/Index"
                                       asp-route-sortColumn="Frequency"
                                       asp-route-sortOrder="desc"
                                       style="text-decoration: none">
                                        <i class="fa-solid fa-angle-down"></i>

                                    </a>

                                </th>
                                <th scope="col">
                                    Date Of Creation
                                    <a asp-page="/Accounts/Index"
                                       asp-route-sortColumn="Date Of Creation"
                                       asp-route-sortOrder="asc"
                                       style="text-decoration: none">
                                        <i class="fa-solid fa-angle-up"></i>

                                    </a>
                                    <a asp-page="/Accounts/Index"
                                       asp-route-sortColumn="Date Of Creation"
                                       asp-route-sortOrder="desc"
                                       style="text-decoration: none">
                                        <i class="fa-solid fa-angle-down"></i>

                                    </a>
                                </th>
                                <th scope="col">
                                    Balance
                                    <a asp-page="/Accounts/Index"
                                       asp-route-sortColumn="Balance"
                                       asp-route-sortOrder="asc"
                                       style="text-decoration: none">
                                        <i class="fa-solid fa-angle-up"></i>

                                    </a>
                                    <a asp-page="/Accounts/Index"
                                       asp-route-sortColumn="Balance"
                                       asp-route-sortOrder="desc"
                                       style="text-decoration: none">
                                        <i class="fa-solid fa-angle-down"></i>

                                    </a>
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var acco in Model.Accounts)
                            {
                                <tr>
                                    <td>@acco.AccountId</td>
                                    <td>@acco.Frequency</td>
                                    <td>@acco.Created</td>
                                    <td>@acco.Balance @Model.Currency</td>
                                    <td><a asp-page="/Accounts/Account" asp-route-accountId="@acco.AccountId" asp-route-previousPage="accounts" class="btn btn-primary">View</a></td>
                                </tr>
                            }
                            
                            <tr>
                                <td colspan="7">
                                    <div class="pagination d-flex justify-content-center">
                                        <nav aria-label="Page navigation example">
                                            <ul class="pagination">

                                                @if (Model.CurrentPage > 1)
                                                {
                                                    <li class="page-item">
                                                        <a class="page-link" asp-page="/Accounts/Index"
                                                       asp-route-sortColumn="@Model.SortColumn"
                                                       asp-route-sortOrder="@Model.SortOrder"
                                                       asp-route-pageNo="1">First</a>
                                                    </li>
                                                }

                                                @for (int i = 1; i <= Model.PageCount; i++)
                                                {
                                                    if (i == Model.CurrentPage)
                                                    {
                                                        <li class="page-item active">
                                                            <a class="page-link">@i <span class="sr-only">(current)</span></a>
                                                        </li>
                                                    }
                                                    else if (i >= Model.CurrentPage - 4 && i <= Model.CurrentPage + 4)
                                                    {
                                                        <li class="page-item">
                                                            <a class="page-link" asp-page="/Accounts/Index"
                                                       asp-route-sortColumn="@Model.SortColumn"
                                                       asp-route-sortOrder="@Model.SortOrder"
                                                       asp-route-pageNo="@i">@i</a>
                                                        </li>
                                                    }
                                                }

                                                @if (Model.CurrentPage < Model.PageCount)
                                                {
                                                    <li class="page-item">
                                                        <a class="page-link" asp-page="/Accounts/Index"
                                                       asp-route-sortColumn="@Model.SortColumn"
                                                       asp-route-sortOrder="@Model.SortOrder"
                                                       asp-route-pageNo="@Model.PageCount">Last</a>
                                                    </li>
                                                }
                                            </ul>
                                        </nav>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>